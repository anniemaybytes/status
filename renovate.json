{
  "extends": [
    "config:base"
  ],
  "labels": [
    "kind/deps"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "kind/security"
    ]
  },
  "stabilityDays": 1,
  "semanticCommits": "disabled",
  "ignoreDeps": [
    "roave/security-advisories",
    "thecodingmachine/php"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 3am on friday"
    ]
  },
  "node": {
    "supportPolicy": [
      "lts_latest"
    ]
  },
  "packageRules": [
    {
      "depTypeList": [
        "require-dev",
        "dependencies",
        "devDependencies"
      ],
      "extends": [
        "schedule:weekends"
      ]
    }
  ]
}
