{
  "extends": [
    "config:best-practices",
    "docker:disableMajor",
    "npm:unpublishSafe",
    "security:openssf-scorecard",
    ":automergeLinters",
    ":automergeTesters"
  ],
  "ignorePresets": [
    "mergeConfidence:all-badges",
    "mergeConfidence:age-confidence-badges"
  ],
  "labels": [
    "kind/deps"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "kind/security"
    ]
  },
  "semanticCommits": "disabled",
  "ignoreDeps": [
    "roave/security-advisories"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "before 3am on friday"
    ]
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "require-dev",
        "dependencies",
        "devDependencies"
      ],
      "extends": [
        "schedule:weekends"
      ]
    },
    {
      "matchPackageNames": [
        "phpstan/phpstan",
        "//phpstan-/",
        "phpstan/extension-installer",
        "overtrue/phplint"
      ],
      "automerge": true
    }
  ]
}
