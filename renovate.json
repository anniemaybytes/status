{
  "extends": [
    "config:base",
    "docker:disableMajor"
  ],
  "labels": [
    "kind/deps"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "kind/security"
    ]
  },
  "stabilityDays": 1,
  "semanticCommits": "disabled",
  "ignoreDeps": [
    "roave/security-advisories",
    "thecodingmachine/php"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 3am on friday"
    ]
  },
  "node": {
    "supportPolicy": [
      "lts_latest"
    ]
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "require-dev",
        "dependencies",
        "devDependencies"
      ],
      "extends": [
        "schedule:weekends"
      ]
    },
    {
      "matchPackageNames": [
        "stylelint"
      ],
      "matchPackagePrefixes": [
        "stylelint-config-"
      ],
      "groupName": "stylelint monorepo"
    },
    {
      "matchPackagePrefixes": [
        "phpstan/"
      ],
      "groupName": "phpstan monorepo"
    },
    {
      "matchPackageNames": [
        "overtrue/phplint"
      ],
      "allowedVersions": "<6.0.0"
    }
  ]
}
