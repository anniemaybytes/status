{
  "private": true,
  "license": "Unlicense",
  "engines": {
    "node": ">=14.15.0"
  },
  "scripts": {
    "lint:eslint": "node ./node_modules/eslint/bin/eslint.js --ext js assets",
    "lint:prettier": "node ./node_modules/prettier/bin-prettier.js --check 'assets/**/*.js' --check 'webpack.config.js' --check 'postcss.config.js'",
    "lint:stylelint": "node ./node_modules/stylelint/bin/stylelint.js --color 'assets/**/*.css' 'assets/**/*.less'",
    "format": "node ./node_modules/prettier/bin-prettier.js --write 'assets/**/*.js' --write 'webpack.config.js' --write 'postcss.config.js'",
    "webpack": "node ./node_modules/webpack/bin/webpack.js --color"
  },
  "dependencies": {
    "@claviska/jquery-dropdown": "2.0.3",
    "css-loader": "6.4.0",
    "cssnano": "5.0.8",
    "imports-loader": "3.0.0",
    "jquery": "3.6.0",
    "less": "4.1.2",
    "less-loader": "10.1.0",
    "mini-css-extract-plugin": "2.4.2",
    "postcss": "8.3.9",
    "postcss-loader": "6.2.0",
    "webpack": "5.58.2",
    "webpack-cli": "4.9.0",
    "webpack-manifest-plugin": "4.0.2"
  },
  "devDependencies": {
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "prettier": "2.4.1",
    "stylelint": "13.13.1",
    "stylelint-config-standard": "22.0.0"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 150,
    "endOfLine": "auto"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "node": false,
      "jquery": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "no-console": "error",
      "max-len": [
        "error",
        {
          "code": 200
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
