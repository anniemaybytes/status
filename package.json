{
  "private": true,
  "license": "Unlicense",
  "engines": {
    "node": ">=16.13.0"
  },
  "scripts": {
    "lint:eslint": "node ./node_modules/eslint/bin/eslint.js --ext js assets",
    "lint:prettier": "node ./node_modules/prettier/bin-prettier.js --check 'assets/**/*.js' --check 'webpack.config.js' --check 'postcss.config.js'",
    "lint:stylelint": "node ./node_modules/stylelint/bin/stylelint.js --color 'assets/**/*.css' 'assets/**/*.less'",
    "format": "node ./node_modules/prettier/bin-prettier.js --write 'assets/**/*.js' --write 'webpack.config.js' --write 'postcss.config.js'",
    "webpack": "node ./node_modules/webpack/bin/webpack.js --color"
  },
  "dependencies": {
    "@claviska/jquery-dropdown": "2.0.3",
    "css-loader": "6.7.3",
    "cssnano": "5.1.15",
    "imports-loader": "4.0.1",
    "jquery": "3.6.4",
    "less": "4.1.3",
    "less-loader": "11.1.0",
    "mini-css-extract-plugin": "2.7.5",
    "postcss": "8.4.21",
    "postcss-loader": "7.1.0",
    "webpack": "5.76.2",
    "webpack-cli": "5.0.1",
    "webpack-manifest-plugin": "5.0.0"
  },
  "devDependencies": {
    "eslint": "8.36.0",
    "eslint-config-prettier": "8.7.0",
    "postcss-less": "6.0.0",
    "prettier": "2.8.4",
    "stylelint": "15.3.0",
    "stylelint-config-standard": "31.0.0"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 150,
    "endOfLine": "auto"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "node": false,
      "jquery": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "no-console": "error",
      "max-len": [
        "error",
        {
          "code": 200
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "overrides": [
      {
        "files": "**/*.less",
        "customSyntax": "postcss-less"
      }
    ]
  }
}
