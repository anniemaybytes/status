{
  "private": true,
  "license": "Unlicense",
  "engines": {
    "node": ">=12.9.0"
  },
  "scripts": {
    "webpack": "node ./node_modules/webpack/bin/webpack.js --color",
    "lint:eslint": "node ./node_modules/eslint/bin/eslint.js --ext js assets",
    "lint:prettier": "node ./node_modules/prettier/bin-prettier.js --check 'assets/**/*.js' --check 'webpack.config.js' --check 'postcss.config.js'",
    "lint:stylelint": "node ./node_modules/stylelint/bin/stylelint.js --color 'assets/**/*.css'",
    "format": "node ./node_modules/prettier/bin-prettier.js --write 'assets/**/*.js' --write 'webpack.config.js' --write 'postcss.config.js'",
    "check-outdated": "node ./node_modules/check-outdated/check-outdated.js --ignore-pre-releases --ignore-dev-dependencies"
  },
  "dependencies": {
    "@claviska/jquery-dropdown": "2.0.3",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "6.3.2",
    "css-loader": "5.0.1",
    "cssnano": "4.1.10",
    "file-loader": "6.2.0",
    "imports-loader": "1.2.0",
    "jquery": "3.5.1",
    "mini-css-extract-plugin": "1.3.1",
    "postcss-loader": "4.1.0",
    "postcss": "8.1.9",
    "webpack": "4.44.2",
    "webpack-cli": "4.1.0",
    "webpack-manifest-plugin": "2.2.0"
  },
  "devDependencies": {
    "babel-eslint": "10.1.0",
    "check-outdated": "2.4.1",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "prettier": "2.2.0",
    "stylelint": "13.8.0",
    "stylelint-config-standard": "20.0.0"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 150,
    "endOfLine": "auto"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "node": false,
      "jquery": true,
      "es6": true
    },
    "rules": {
      "no-console": "error",
      "max-len": [
        "error",
        {
          "code": 200
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
