{
  "name": "animebytes/status",
  "description": "Simple status page",
  "type": "project",
  "license": "Unlicense",
  "scripts": {
    "test": [
      "@phplint",
      "@phpcs",
      "@phpstan",
      "@phpunit"
    ],
    "phpstan": "phpstan analyze --ansi --no-progress --memory-limit=-1",
    "phpunit": "phpunit --colors=always",
    "phplint": "phplint --ansi -n",
    "phpcs": "phpcs -n --cache=.phpcs-cache",
    "phpcbf": "phpcbf"
  },
  "require": {
    "php": "~8.4",
    "slim/slim": "4.15.0",
    "slim/twig-view": "3.4.1",
    "twig/twig": "3.22.0",
    "tracy/tracy": "2.11.0",
    "php-di/php-di": "7.1.1",
    "slim/psr7": "1.7.1",
    "slim/http": "1.4.0",
    "slim/http-cache": "1.2.0",
    "paragonie/csp-builder": "3.0.2",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-apcu": "*",
    "ext-openssl": "*",
    "ext-dom": "*",
    "ext-zend-opcache": "*"
  },
  "autoload": {
    "psr-4": {
      "Status\\": "src/Status/",
      "Singleton\\": "src/Singleton/",
      "RunTracy\\": "src/RunTracy/"
    }
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpstan/extension-installer": "1.4.3",
    "phpstan/phpstan": "2.1.31",
    "phpstan/phpstan-deprecation-rules": "2.0.3",
    "phpstan/phpstan-phpunit": "2.0.7",
    "overtrue/phplint": "9.6.2",
    "squizlabs/php_codesniffer": "4.0.0",
    "mikey179/vfsstream": "1.6.12",
    "dg/bypass-finals": "1.9.0",
    "phpunit/phpunit": "12.4.2"
  },
  "autoload-dev": {
    "psr-0": {
      "Status": "tests"
    }
  },
  "config": {
    "platform-check": true,
    "platform": {
      "php": "8.4.0"
    },
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
