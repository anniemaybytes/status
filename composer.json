{
  "name": "animebytes/status",
  "description": "Simple status page",
  "type": "project",
  "license": "Unlicense",
  "scripts": {
    "test": [
      "@phplint",
      "@phpcs",
      "@phpstan",
      "@phpunit"
    ],
    "phpstan": "phpstan analyze --ansi --memory-limit=-1",
    "phpunit": "phpunit --colors=always",
    "phplint": "phplint --ansi -n",
    "phpcs": "phpcs -n --cache=.phpcs-cache",
    "phpcbf": "phpcbf"
  },
  "require": {
    "php": "~8.1",
    "slim/slim": "4.9.0",
    "slim/twig-view": "3.2.0",
    "twig/twig": "3.3.4",
    "tracy/tracy": "2.9.0",
    "php-di/php-di": "6.3.5",
    "slim/psr7": "1.5",
    "slim/http": "1.2.0",
    "doctrine/annotations": "1.13.2",
    "petrknap/php-singleton": "1.0.0",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-apcu": "*",
    "ext-openssl": "*",
    "ext-dom": "*",
    "ext-zend-opcache": "*",
    "j7mbo/twitter-api-php": "1.0.6",
    "paragonie/csp-builder": "2.6.0"
  },
  "autoload": {
    "psr-4": {
      "Status\\": "src/Status/",
      "RunTracy\\": "src/RunTracy/"
    }
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpstan/extension-installer": "1.1.0",
    "phpstan/phpstan": "1.2.0",
    "phpstan/phpstan-deprecation-rules": "1.0.0",
    "phpstan/phpstan-phpunit": "1.0.0",
    "overtrue/phplint": "4.0.0",
    "squizlabs/php_codesniffer": "3.6.2",
    "mikey179/vfsstream": "1.6.10",
    "dg/bypass-finals": "1.3.1",
    "phpunit/phpunit": "9.5.11"
  },
  "autoload-dev": {
    "psr-0": {
      "Status": "tests"
    }
  },
  "config": {
    "platform-check": true,
    "platform": {
      "php": "8.1.0"
    },
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
