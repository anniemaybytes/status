{
  "name": "animebytes/status",
  "description": "Simple status page",
  "type": "project",
  "license": "Unlicense",
  "scripts": {
    "test": [
      "@phplint",
      "@phpcs",
      "@phpstan",
      "@phpunit"
    ],
    "phpstan": [
      "phpstan analyze --ansi --memory-limit=-1"
    ],
    "phpunit": [
      "phpunit --colors=always"
    ],
    "phplint": [
      "phplint --ansi -n"
    ],
    "phpcs": [
      "phpcs -n --cache=.phpcs-cache"
    ],
    "phpcbf": [
      "phpcbf"
    ]
  },
  "require": {
    "php": "~7.4",
    "slim/slim": "4.5.0",
    "slim/twig-view": "3.1.0",
    "tracy/tracy": "2.7.5",
    "php-di/php-di": "6.2.1",
    "slim/psr7": "1.1.0",
    "slim/http": "1.0",
    "doctrine/annotations": "1.10.3",
    "petrknap/php-singleton": "1.0.0",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-apcu": "*",
    "ext-openssl": "*",
    "ext-dom": "*",
    "ext-zend-opcache": "*"
  },
  "autoload": {
    "psr-4": {
      "Status\\": "src/Status/",
      "RunTracy\\": "src/RunTracy/"
    }
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpstan/phpstan": "0.12.29",
    "phpstan/phpstan-deprecation-rules": "0.12.4",
    "overtrue/phplint": "2.0.2",
    "squizlabs/php_codesniffer": "3.5.5",
    "mikey179/vfsstream": "1.6.8",
    "dg/bypass-finals": "1.2.1",
    "phpunit/phpunit": "9.2.3"
  }
}
