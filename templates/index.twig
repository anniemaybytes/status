{% extends "@layout/layout.twig" %}
{% block the_page %}
    <div id="logo"></div>
    <h1>server status</h1>
    <ul id="status">
        <li>
            <h2>
                <span>site </span>
                <span class="status {% if site_status == 1 %}normal{% elseif site_status == 2 %}issues{% else %}down{% endif %}">{% if site_status == 1 %}normal{% elseif site_status == 2 %}maintenance{% else %}down{% endif %}</span>
            </h2>
        </li>
        <li>
            <h2>
                <span>tracker<a href="#" class="details" data-jq-dropdown="#tracker-details">â†“</a> </span>
                <span class="status {% if tracker_status == 1 %}normal{% elseif tracker_status == 2 %}issues{% else %}down{% endif %}">{% if tracker_status == 1 %}normal{% elseif tracker_status == 2 %}issues{% else %}down{% endif %}</span>
            </h2>
        </li>
        <li>
            <h2>
                <span>irc </span>
                <span
                    class="status {% if irc_status == 1 %}normal{% elseif irc_status == 2 %}issues{% else %}down{% endif %}">{% if irc_status == 1 %}normal{% elseif irc_status == 2 %}issues{% else %}down{% endif %}</span>
            </h2>
        </li>
        <li>
            <h2>
                <span>mei </span>
                <span
                    class="status {% if mei_status == 1 %}normal{% elseif mei_status == 2 %}issues{% else %}down{% endif %}">{% if mei_status == 1 %}normal{% elseif mei_status == 2 %}issues{% else %}down{% endif %}</span>
            </h2>
        </li>
    </ul>
    {% if config('twitter.enabled') and twitter_feed is defined %}
        <hr>
        <div id="feed">
            <div class="header">
                <h2>Feeds</h2> by <a href="https://twitter.com/{{ config('twitter.name') }}" target="_blank"
                                     rel="noopener noreferrer">@{{ config('twitter.name') }}</a>
            </div>
            <div class="content">
                <table>
                    {% for tweet in twitter_feed %}
                        <tr>
                            <td>
                                <div class="feed-text">{{ tweet.full_text|nl2br }}</div>
                                <div class="feed-time">@ {{ tweet.created_at }}</div>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    {% endif %}
    <div id="tracker-details" class="jq-dropdown jq-dropdown-tip">
        <ul class="jq-dropdown-menu">
            {% for server in tracker_details %}
                <li>{{ server.ip }} - {% if server.status == 1 %}normal{% else %}down{% endif %}</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}